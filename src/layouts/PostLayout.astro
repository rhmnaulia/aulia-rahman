---
import BaseLayout from "./BaseLayout.astro";

interface Props {
  title: string;
  description: string;
  date: Date;
}

const { title, description, date } = Astro.props;
const formattedDate = date.toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<BaseLayout title={`${title} â€” Aulia Rahman`} description={description} type="article">
  <article>
    <header class="mb-10">
      <h1 class="text-[22px] leading-tight tracking-tight text-neutral-800 mb-2">{title}</h1>
      <time datetime={date.toISOString()} class="font-mono text-[12px] text-neutral-500">
        {formattedDate}
      </time>
    </header>

    <div class="prose max-w-none">
      <slot />
    </div>
  </article>
</BaseLayout>
