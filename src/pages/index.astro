---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("posts", ({ data }) => !data.draft))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<BaseLayout title="Aulia Rahman" description="Software engineer based in Jakarta. Frontend, full-stack, and figuring it out.">
  <h1 class="text-[22px] tracking-tight mb-6 text-neutral-800">Aulia Rahman</h1>

  <p class="text-[15px] mb-4 leading-7">
    Software engineer in Jakarta. I've been building frontend with React and
    Next.js for a while, and recently started picking up Go to move closer to
    full-stack.
  </p>

  <p class="text-[15px] mb-4 leading-7">
    I work with AI every day. It changed how I write code â€” I ship faster
    and spend less time on the parts that don't require thinking.
  </p>

  <p class="text-[15px] mb-10 leading-7">
    Outside of work I play basketball, lift, and run. Find me
    on <a href="https://x.com/rhmnaul" target="_blank" rel="noopener">X</a>, <a href="https://github.com/rhmnaulia" target="_blank" rel="noopener">GitHub</a>, <a href="https://linkedin.com/in/rhmnaulia/" target="_blank" rel="noopener">LinkedIn</a>, and <a href="https://www.strava.com/athletes/134201284" target="_blank" rel="noopener">Strava</a>.
  </p>

  <ul class="space-y-3">
    {posts.map((post) => (
      <li>
        <a href={`/blog/${post.id}`} class="text-[15px] text-neutral-800 decoration-neutral-200 hover:decoration-neutral-500">
          {post.data.title}
        </a>
      </li>
    ))}
  </ul>
</BaseLayout>
